<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_transport_shift_tree" model="ir.ui.view">
        <field name="name">hr.transport.shift.tree</field>
        <field name="model">hr.transport.shift</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Transport Shift">
                <field name="name"/>
                <field name="departure_time" widget="float_time"/>
                <field name="shift"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_transport_shift_form" model="ir.ui.view">
        <field name="name">hr.transport.shift.form</field>
        <field name="model">hr.transport.shift</field>
        <field name="arch" type="xml">
            <form string="Transport Shift">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="departure_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="shift"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" group="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_transport_shift" model="ir.actions.act_window">
        <field name="name">Transport Shifts</field>
        <field name="res_model">hr.transport.shift</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new transport shift
            </p>
        </field>
    </record>

</odoo>