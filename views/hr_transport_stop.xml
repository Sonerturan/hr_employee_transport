<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_transport_stop_tree" model="ir.ui.view">
        <field name="name">hr.transport.stop.tree</field>
        <field name="model">hr.transport.stop</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Transport Stop">
                <field name="name"/>
                <field name="latitude"/>
                <field name="longitude"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_transport_stop_form" model="ir.ui.view">
        <field name="name">hr.transport.stop.form</field>
        <field name="model">hr.transport.stop</field>
        <field name="arch" type="xml">
            <form string="Transport Stop">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="latitude"/>
                            <field name="latitude"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" group="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_transport_stop" model="ir.actions.act_window">
        <field name="name">Transport Stop</field>
        <field name="res_model">hr.transport.stop</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new transport stop
            </p>
        </field>
    </record>

</odoo>