<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_transport_route_tree" model="ir.ui.view">
        <field name="name">hr.transport.route.tree</field>
        <field name="model">hr.transport.route</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Transport Route">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_transport_route_form" model="ir.ui.view">
        <field name="name">hr.transport.route.form</field>
        <field name="model">hr.transport.route</field>
        <field name="arch" type="xml">
            <form string="Transport Route">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Stops">
                            <field name="stop_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="stop_id"/>
                                    <field name="sequence"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" group="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_transport_route" model="ir.actions.act_window">
        <field name="name">Transport Route</field>
        <field name="res_model">hr.transport.route</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new transport route
            </p>
        </field>
    </record>

</odoo>